image{
  width: 100%;
  height:450rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color:#fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  display: flex;
  margin-top: 10rpx;
  margin-bottom:20rpx;
  margin-left: 10rpx;
  font-size:16px;
  line-height:16px;
}
.post-author{
  align-items: center;
  width:60rpx;
  height:60rpx;
  line-height: 60rpx;
  vertical-align:  moddle;

}
.post-date{
  margin: auto auto;
  margin-left:20rpx; 
  font-size: 26rpx;
  line-height:26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom:10px;
  margin-left:10px;
}
post-image{
  margin-left:16rpx;
  width:100%;
  margin:auto 0;
  margin-bottom:15rpx;
}
.post-content{
  color:#666666;
  font-size:28rpx;
  margin:15rpx 10rpx 20rpx 15rpx;
  letter-spacing:2rpx;
  line-height:40rpx;
}
.post-like{
  display: flex;
  font-size:13px;
  flex-direction:row;
  line-height:16rpx;
  margin-left:10rpx;
}
.post-like-image{
  height:16px;
  width:16px;
  margin-right:8px;
  align-items: center;
}
.post-like-font{
  margin:auto 0;
  margin-right:20px;
}
